<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shenhua.bluetooth.MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:divider="@drawable/divider"
        app:showDividers="beginning|middle|end">

        <TextView
            style="@style/TagText"
            android:text="开关" />

        <RelativeLayout style="@style/ItemLayout">

            <TextView
                style="@style/Text"
                android:text="蓝牙" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout style="@style/ItemLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="开放检测"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text" />

                <TextView
                    style="@style/Text.Sub"
                    android:text="仅让已配对的设备检测到" />

            </LinearLayout>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout style="@style/ItemLayout">

            <TextView
                style="@style/Text"
                android:text="设备名称" />

            <TextView
                style="@style/Text.Sub"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/app_name" />

        </RelativeLayout>

        <RelativeLayout style="@style/ItemLayout">

            <TextView
                style="@style/Text"
                android:text="接收的文件" />

            <TextView
                style="@style/Text.Sub"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right" />

        </RelativeLayout>

        <include layout="@layout/view_devices" />

    </android.support.v7.widget.LinearLayoutCompat>

    <include layout="@layout/view_bottom_tool" />

</RelativeLayout>